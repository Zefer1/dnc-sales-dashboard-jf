PORT=3000
FRONTEND_URL=http://localhost:5173
JWT_SECRET=change-me
DATABASE_URL="file:./dev.db"
DEMO_USER_EMAIL=user@ex.com
DEMO_USER_PASSWORD=1234

# Password reset email (production)
# If set, used to generate the reset link instead of FRONTEND_URL
PASSWORD_RESET_BASE_URL=http://localhost:5173

# Optional: set to false to disable returning dev reset tokens in non-production
# RETURN_DEV_PASSWORD_RESET_TOKEN=false

# CAPTCHA (required in production for /api/password/forgot)
# Cloudflare Turnstile
# TURNSTILE_SITE_KEY=0x...
TURNSTILE_SECRET_KEY=change-me

# Dev/testing only: bypass captcha checks
# CAPTCHA_BYPASS=true

# SMTP settings (required in production to actually email reset links)
# Gmail example (recommended: use an App Password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
# SMTP_SECURE=false
SMTP_USER=your.email@gmail.com
SMTP_PASS=your-gmail-app-password
# Optional (defaults to SMTP_USER if not set)
SMTP_FROM="UrbanCRM <your.email@gmail.com>"
